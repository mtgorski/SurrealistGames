@using System.Web.Script.Services
@model SurrealistGames.Models.SavedQuestionGameResult
@{
    ViewBag.Title = "Play";
}

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2>Q &amp; A</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-9 col-sm-offset-1 well">
            @Html.HiddenFor(m => m.QuestionId)
            @Html.HiddenFor(m => m.AnswerId)
            <div class="row">
                <p class="lead col-xs-10">
                    Q : <span id="question"></span>
                </p>
                <div class="col-xs-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button id="reportQBtn" class="btn btn-primary auth" hidden="hidden">Report</button>
                    }
                    else
                    {
                        <button id="reportQBtn" class="btn btn-primary" hidden="hidden" disabled="disabled">Log in to report</button>
                    }
                </div>
            </div>
            <div class="row">
                <p class="lead col-xs-10">
                    A : <span id="answer"></span>
                </p>
                <div class="col-xs-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button id="reportABtn" class="btn btn-primary auth" hidden="hidden">Report</button>
                    }
                    else
                    {
                        <button id="reportABtn" class="btn btn-primary" disabled="disabled" hidden="hidden">Log in to report</button>
                    }
                </div>   
            </div>                               
            @if (User.Identity.IsAuthenticated)
            {
                <button id="saveButton" class="btn btn-primary auth" onclick="return onSaveClick()">Save</button>
            }
            else
            {
                <button id="saveButton" class="btn btn-primary" disabled="disabled">Log in to save</button>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-xs-8 col-sm-offset-1 well">
            <div class="col-xs-6">

                <form id="prefixForm">
                    <div class="form-group input-group">
                        <label for="prefix">
                            Question
                        </label>
                        @Html.TextBox("prefix", "", new { id = "prefix", @class = "form-control" })

                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>

            </div>
            <div class="col-xs-6">
                <form id="suffixForm">
                    <div class="form-group input-group">
                        <label for="suffix">
                            Answer
                        </label>
                        @Html.TextBox("suffix", "", new { id = "suffix", @class = "form-control" })

                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>

            </div>
        </div>
            
        

    </div>
</div>


@section scripts
{

    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/jquery-validate-defaults.js"></script>
    <script src="~/Scripts/playQuestionGame.js"></script>
}
